<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F7FC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitleSubs"
        android:text="Suscripciones"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#0D1313"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Calendario -->
    <CalendarView
        android:id="@+id/cvCalendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSubs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSub"
        android:text="Programadas para el día"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvCalendar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Lista -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSubscriptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvSub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Estado vacío (encima de la lista) -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvSubscriptions"
        app:layout_constraintBottom_toBottomOf="@id/rvSubscriptions"
        app:layout_constraintStart_toStartOf="@id/rvSubscriptions"
        app:layout_constraintEnd_toEndOf="@id/rvSubscriptions">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            app:tint="#9CA3AF" />

        <TextView
            android:text="Sin suscripciones para este día"
            android:textColor="#6B7280"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- FAB Gráfica -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Ver gráfica"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- FAB Agregar -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddSubscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Agregar suscripción"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@android:color/white"
        app:useCompatPadding="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
